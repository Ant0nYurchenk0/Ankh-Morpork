@model Ankh_Morpork_MVC.Dtos.EventDto
@using Ankh_Morpork_MVC.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var item = (Item)Model.Character;
}
<p>Score: @Model.Score</p>

<h2>Hood</h2>

<p>Money: @Model.PlayerMoney</p>
<p>Hoods: @Model.PlayerHood</p>
<p>Price: @item.Price</p>
<p></p>

@using (Html.BeginForm("Accept", "Hoods", new { fee = item.Price }))
{
    <button type="submit">Submit</button>
    @Html.ActionLink("Deny", "Deny", "Hoods", new { accept = false }, null)
}
