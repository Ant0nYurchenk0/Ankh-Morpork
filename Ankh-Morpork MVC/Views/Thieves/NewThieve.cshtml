@model Ankh_Morpork_MVC.Dtos.EventDto
@using Ankh_Morpork_MVC.Models
@{
    var character = (Thieve)Model.Character;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>Score: @Model.Score</p>

<h2>@character.Name of Thieves's Guild</h2>
<h3>@character.MeetMessage</h3>
<p>Money: @Model.PlayerMoney</p>
<p></p>
@using (Html.BeginForm("Accept", "Thieves", new { fee = character.Fee }))
{
    <button type="submit">Submit</button>
    @Html.ActionLink("Deny", "Deny", "Thieves", new { accept = false }, null)
}

